<%- contentFor('body') %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="javascript:void(0);" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#modalCreateGroup"><i class="mdi mdi-plus me-2"></i> Agregar Grupo</a>
                </div>
                <div class="modal fade" id="modalCreateGroup" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modalCreateGroupLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-930w" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCreateGroupLabel">Registrar Grupo</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="modal-add-groups">
                                    <form id="form-add-group" class="form-app-inputs">
                                        <div class="row">
                                            <ul class="form-submenu-left form-sb-left-groups-add">
                                                <li class="active" ref-form="groups-general" ref-parent="form-sb-groups-veh-add" ref-content="form-content-groups-add">General</li>
                                                <li ref-form="groups-maintenance" ref-parent="form-sb-left-groups-add" ref-content="form-content-groups-add">Configuraciones</li>
                                            </ul>
                                            <div class="form-submenu-container">
                                                <div id="groups-general" class="form-submenu-content form-content-groups-add active">
                                                    <p>general</p>
                                                </div>
                                                <div id="groups-maintenance" class="form-submenu-content form-content-groups-add">
                                                    <p>informacon</p> 
                                                </div> 
                                            </div>
                                        </div>
                                    </form>
                                    
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn btn-create-group btn-outline-danger waves-effect waves-light">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalEditGroup" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modalEditGroupLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-930w" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalEditGroupLabel">Actualizar Grupo</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="modal-add-groups">
                                    <form id="form-edit-group" class="form-app-inputs">
                                        <div class="row">
                                            <ul class="form-submenu-left form-sb-left-groups-edit">
                                                <li class="active" ref-form="edit-groups-general" ref-parent="form-sb-groups-veh-edit" ref-content="form-content-groups-edit">General</li>
                                                <li ref-form="edit-groups-maintenance" ref-parent="form-sb-left-groups-edit" ref-content="form-content-groups-edit">Configuraciones</li>
                                            </ul>
                                            <div class="form-submenu-container">
                                                    <div id="edit-groups-general" class="form-submenu-content form-content-groups-edit active">
                                                        <p>general</p>
                                                    </div>
                                                    <div id="edit-groups-maintenance" class="form-submenu-content form-content-groups-edit">
                                                        <p>informacon</p>
                                                    </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn btn-create-group btn-outline-danger waves-effect waves-light">Actualizar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive mt-3">
                    <div id="div-test"></div>
                    <table id="dtGroups" class="table table-centered activate-select  w-100 datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 20px;">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="customercheck">
                                        <label class="form-check-label mb-0" for="customercheck">&nbsp;</label>
                                    </div>
                                </th>
                                <th>ID</th>
                                <th>Empresa</th>
                                <th>Nombre</th>
                                <th>Alias</th>
                                <th>Estado</th>
                                <th style="width: 120px;">Action</th>
                            </tr>
                        </thead>
                        <!--  -->
                    </table>
                </div>
            </div>
        </div>
    </div>

   
</div>

