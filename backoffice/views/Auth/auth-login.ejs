<!doctype html>
<html lang="en">

    <head>
        
        <meta charset="utf-8" />
        <title>Login | wTracking BackOffice</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="BackOffice wTracking" name="description" />
        <meta content="AGL, LTD" name="author" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="public/assets/images/favicon.ico?v=1.0.1">
        <meta name="robots" content="noindex, nofollow" />
        <%- include ('../Partials/HeaderStyle') %>
        <link rel="stylesheet" type="text/css" href="public/assets/libs/toastr/build/toastr.min.css">
    </head>

    <body class="auth-body-bg">
        <div class="home-btn d-none d-sm-block">
            <a href="/"><i class="mdi mdi-home-variant h2 text-white"></i></a>
        </div>
        <div>
            <div class="container-fluid p-0">
                <div class="row g-0">
                    <div class="col-lg-4">
                        <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                            <div class="w-100">
                                <div class="row justify-content-center">
                                    <div class="col-lg-9">
                                        <div>
                                            <div class="text-center">
                                                <div>
                                                    <a href="/" class="logo"><img src="public/assets/images/logo-dark.png" height="60" alt="logo"></a>
                                                </div>
    
                                                <h4 class="font-size-18 mt-1">BackOffice wTracking</h4>
                                                <!-- <p class="text-muted">Sign in to continue to Nazox.</p> -->
                                            </div>

                                            <div class="p-2 mt-5">
                                                <% if(error.length> 0) { %>
                                                    <div class="alert alert-danger " role="alert">
                                                        <%= error %>
                                                    </div>
                                                <% } %>
                                                <% if(message.length> 0) { %>
                                                    <div class="alert alert-info" role="alert">
                                                        <%= message %>
                                                    </div>
                                                <% } %>

                                                <form id="form-login-ws" action="/auth-login" method="post">
                    
                                                    <div class="mb-3 auth-form-group-custom mb-4">
                                                        <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                        <label for="username">Usuario</label>
                                                        <input type="text" class="form-control" id="username"
                                                        placeholder="Introduza su usuario" name="email" >
                                                    </div>
                            
                                                    <div class="mb-3 auth-form-group-custom mb-4">
                                                        <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                        <label for="userpassword">Contraseña</label>
                                                        <input type="password" class="form-control" id="userpassword" placeholder="Introduzca su Contraseña" name="password" >
                                                    </div>
                            
                                                    <div class="form-check">
                                                        <input type="checkbox" class="form-check-input" id="customControlInline">
                                                        <label class="form-check-label" for="customControlInline">Recordar</label>
                                                    </div>

                                                    <div class="mt-4 text-center">
                                                        <button class="btn btn-danger w-md waves-effect waves-light btn-submit-login" type="button">Log In</button>
                                                    </div>

                                                </form>
                                            </div>

                                            <div class="mt-5 text-center">
                                                <!-- <p>Don't have an account ? <a href="register" class="fw-medium text-primary"> Register </a> </p> -->
                                                <p>© <script>document.write(new Date().getFullYear())</script> AGL, LTD. wTracking ver. 5.0.1.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="authentication-bg">
                            <div class="bg-overlay"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include ('../Partials/VendorScript') %>
        <script src="public/assets/libs/toastr/build/toastr.min.js"></script>
        <script src="public/assets/js/pages/pass-addon.init.js"></script>
        <script src="public/assets/js/app.js"></script>

    </body>
</html>
